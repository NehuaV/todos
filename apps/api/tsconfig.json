{
  "compilerOptions": {
    "lib": [
      "ES2015"
    ],
    "module": "ESNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "paths": {
      "@*": [
        "./src/*",
      ]
    },
  },
  "exclude": [
    "node_modules"
  ],
  "extends": "tsconfig/base.json",
  "include": [
    "src"
  ]
}